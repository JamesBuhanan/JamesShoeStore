<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/firstFragment">

    <fragment
        android:id="@+id/firstFragment"
        android:name="com.example.jamesshoestore.ui.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/secondFragment"
            app:popUpTo="@id/firstFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/secondFragment"
        android:name="com.example.jamesshoestore.ui.WelcomeFragment"
        android:label="Welcome Onboarding"
        tools:layout="@layout/fragment_welcome">
        <action
            android:id="@+id/action_SecondFragment_to_ThirdFragment"
            app:destination="@id/thirdFragment"
            app:popUpTo="@id/secondFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/thirdFragment"
        android:name="com.example.jamesshoestore.ui.InstructionFragment"
        android:label="Instructions Onboarding"
        tools:layout="@layout/fragment_instruction">
        <action
            android:id="@+id/action_ThirdFragment_to_FourthFragment"
            app:destination="@id/fourthFragment"
            app:popUpTo="@id/thirdFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/fourthFragment"
        android:name="com.example.jamesshoestore.ui.ShoeListFragment"
        android:label="Shoes List"
        tools:layout="@layout/fragment_shoe_list">
        <action
            android:id="@+id/action_FourthFragment_to_FifthFragment"
            app:destination="@id/fifthFragment" />
        <action
            android:id="@+id/action_FourthFragment_to_FirstFragment"
            app:destination="@id/firstFragment"
            app:popUpTo="@id/fourthFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/fifthFragment"
        android:name="com.example.jamesshoestore.ui.ShoeDetailFragment"
        android:label="Shoe Details"
        tools:layout="@layout/fragment_shoe_detail">
        <action
            android:id="@+id/action_FifthFragment_to_FourthFragment"
            app:destination="@id/fourthFragment"
            app:popUpTo="@id/fifthFragment"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>